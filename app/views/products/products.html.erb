<h1 class="display-4">Productos</h1>
<div>
  <div>
    <%= form_with url: products_products_path, method: :get do |form| %>
      <div class="input-group mb-3">
        <%= form.search_field :query, placeholder: "Nombre del producto...", class: "form-control", autofocus: true, id: 'products-search-bar'  %>
        <div class="input-group-append">
          <%= form.submit "Buscar", class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
  <div id="adding_products" class="row" style='margin: 0px 0px -20px -20px;'>
    <% @adding_products.each do |product| %>
      <div class="card col-sm6" style="width: 17.85rem; margin-left: 20px; margin-bottom: 20px">
        <%= image_tag "products/#{product.image}", alt: "image of #{product.name}", class: "card-img-top" %>
        <div class="card-body">
          <h1 class="card-title display-5"> <%= product.name %> </h5>
          <p class="card-text"> <%= product.description %> </p>
        </div>
        <div class="card-body">
          <%= button_to "AÃ±adir al carrito", products_addToCart_path(:productId => product.id, :productqnt => product.qnt), class: "btn btn-outline-primary" %>
        </div>
      </div>
        <% render 'layouts/alerts' %>
    <% end %>
  </div>
</div>

