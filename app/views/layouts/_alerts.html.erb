<%= stylesheet_link_tag 'alerts.css' %>
<% if notice %>
  
  <% unless flash[:notice_cart] %>
    <div class="alert alert-primary alert-dismissible fade show dissapear" role="alert" id="alert">
      <%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% else %>
      <div class="alert alert-success alert-dismissible fade show dissapear" role="alert" id="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
  <% end %>
 
  <script type="text/javascript" >
    setTimeout(function() {
      $('.dissapear').alert('close');
    }, 4000);
  </script>
 
<% end %>

