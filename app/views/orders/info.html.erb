<%# Formulario con informacion de la compra %>
<div class="container">
  <h1>Información de contacto</h1>
  <p>Necesitamos tu información de contacto para poder continuar.</p>

  <div class="border" style="margin-bottom: 15px; padding: 30px">
    <%= form_with url: '/orders/submit_info' do |form| %>
      <div class="form-row">
        <div class="col-md-6 mb-3">
          <%= form.label :name, 'Nombre o razón social'%>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :ciorif, 'Cédula o RIF' %>
          <%= form.number_field :ciorif, class: 'form-control' %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-6 mb-3">
          <%= form.label :email, 'Correo electrónico'%>
          <%= form.email_field :email, class: 'form-control' %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :tlf, 'Télefono'%>
          <%= form.phone_field :tlf, class: 'form-control' %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md mb-3">
          <%= form.label :address, 'Dirección'%>
          <%= form.text_field :address, class: 'form-control' %>
        </div>
      </div>
      <%= form.submit 'Pago', class:'btn btn-success' %>
    <% end %>
  </div>
</div>
