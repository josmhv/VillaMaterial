<div class='card-responsive'>
  <div class="card" style='margin-top: 20px;'>
    <div class="card-body">
      <h2>Olvidaste tu contraseña?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, 'Correo', for:'exampleInputEmail1'%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:'exampleInputEmail1' %>
        </div>

        <div class="actions">
          <%= f.submit "Enviar solicitud de cambio de contraseña", class:'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

