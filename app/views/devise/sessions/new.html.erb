<div class='card-responsive' >

  <div class="card" style='margin-top: 20px;'>
    <div class="card-body">
      <h2>Iniciar Sesión</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, 'Correo', for:'exampleInputEmail1'%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:'exampleInputEmail1', placeholder:'example@mail.com' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Contraseña', for:'exampleInputPassword1' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:'form-control', id:'exampleInputPassword1', placeholder:'123contraseña' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me, class:'form-check-input', id:'exampleCheck1' %>
            <%= f.label :remember_me, "Recuérdame", class:'form-check-label align-top', for:'exampleCheck1', style:"font-size: 18px" %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in", class:'btn btn-primary', style:'margin-top: 10px; margin-bottom: 10px' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
